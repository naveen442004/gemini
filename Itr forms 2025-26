        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('complexityChart').getContext('2d');
            const complexityChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['ITR-1', 'ITR-4', 'ITR-2', 'ITR-3'],
                    datasets: [{
                        label: 'Relative Scope & Complexity',
                        data: [10, 25, 60, 100],
                        backgroundColor: [
                            '#88BBD6',
                            '#528AAE',
                            '#3A6EA5',
                            '#004E98'
                        ],
                        borderColor: [
                            '#FFFFFF'
                        ],
                        borderWidth: 2,
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            beginAtZero: true,
                            grid: {
                                display: false,
                                drawBorder: false
                            },
                             ticks: {
                                display: false
                            }
                        },
                        y: {
                            grid: {
                                display: false,
                                drawBorder: false
                            },
                             ticks: {
                                color: '#004E98',
                                font: {
                                    size: 14,
                                    weight: '600'
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: '#004E98',
                            titleFont: {
                                size: 16,
                                weight: 'bold'
                            },
                            bodyFont: {
                                size: 14
                            },
                            displayColors: false,
                            callbacks: {
                                title: function(tooltipItems) {
                                    const item = tooltipItems[0];
                                    let label = item.chart.data.labels[item.dataIndex];
                                    if (Array.isArray(label)) {
                                      return label.join(' ');
                                    } else {
                                      return label;
                                    }
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>
